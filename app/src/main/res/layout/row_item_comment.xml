<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/commentImg"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/gray" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Title" />

            <TextView
                android:id="@+id/comment"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sub" />

            <TextView
                android:visibility="gone"
                android:id="@+id/transferBtn"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="번역보기" />

            <TextView
                android:visibility="gone"
                android:id="@+id/transferText"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />



            <LinearLayout
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/gray"
                    android:src="@drawable/like"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/commentLikeNum"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:tint="@color/gray"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/dislike"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/commentdisLikeNum"
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:tint="@color/gray"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/message"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/commentrepliesNum"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:id="@+id/recommentBtn"
                android:text="답글 0개"
                android:background="#00ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommentRecyclerView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#54181418" />



</LinearLayout>