<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_selected="true">
        <shape>
            <solid android:color="#ffffffff" />

            <padding
                android:left="5dp"
                android:bottom="5dp"
                android:right="5dp"
                android:top="5dp"/>

            <stroke
                android:width="1.5dp"
                android:color="#ffffffff" />

            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <solid android:color="#555555" />

            <padding
                android:left="5dp"
                android:bottom="5dp"
                android:right="5dp"
                android:top="5dp"/>

            <stroke
                android:width="1.5dp"
                android:color="#555555" />

            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>

